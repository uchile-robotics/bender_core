<launch>
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find bender_gazebo)/config/bender_effort_control.yaml" command="load"/>

  <!-- Load the controllers, launch in other console -->
  <node launch-prefix="xterm -T 'Gazebo controllers' -e" name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/bender"
    args="joint_state_controller
    	  neck_controller
    	  rgbd_head_controller
        l_arm_controller
        r_arm_controller
        r_gripper_controller
        l_gripper_controller"/>

</launch>