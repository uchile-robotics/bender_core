<launch>

	<arg name="ns" default="joy"/>

	<!-- joy nodes -->
	<include file="$(find bender_joy)/launch/common/driver_item.xml">
		<arg name="joy_number" value="0"/>
		<arg name="ns"         value="$(arg ns)"/>
	</include>
	<include file="$(find bender_joy)/launch/common/driver_item.xml">
		<arg name="joy_number" value="1"/>
		<arg name="ns"         value="$(arg ns)"/>
	</include>
	<include file="$(find bender_joy)/launch/common/driver_item.xml">
		<arg name="joy_number" value="2"/>
		<arg name="ns"         value="$(arg ns)"/>
	</include>
	<include file="$(find bender_joy)/launch/common/driver_item.xml">
		<arg name="joy_number" value="3"/>
		<arg name="ns"         value="$(arg ns)"/>
	</include>

</launch>
