<launch>

  <!-- parameters -->
  <arg name="joy_number" default="js0"/>

  <!-- joy node -->
  <!--<include file="$(find bender_joy)/launch/joy.launch">
    <arg name="joy_number" value="$(arg joy_number)"/>
  </include>-->
 
  <!-- Joystick complete -->
  <node pkg="bender_joy" type="joystick_complete" name="joystick_complete" output="screen" ns="/bender/joy/">
    <rosparam file="$(find bender_joy)/config/joystick_complete.yaml" command="load"/>
    <remap from="joystick_complete/joy" to="/bender/joy/$(arg joy_number)"/>
  </node>

</launch>
