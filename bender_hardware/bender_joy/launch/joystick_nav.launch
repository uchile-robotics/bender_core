<launch>

	<!-- parameters -->
	<arg name="joy_number" default="0"/>

	<!-- joy node -->
	<include file="$(find bender_joy)/launch/joy.launch">
		<arg name="joy_number" value="js$(arg joy_number)"/>
	</include>

	<!-- joystick for navigation control-->
	<node pkg="bender_joy" type="joystick_nav" name="joystick_nav" output="screen" ns="/bender/joy/">
		<rosparam file="$(find bender_joy)/config/joystick_nav.yaml" command="load"/>
		<remap from="joystick_nav/joy" to="/bender/joy/js$(arg joy_number)"/>
	</node>

</launch>