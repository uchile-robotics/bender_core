<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find bender_gazebo)/config/effort_controller_config_sim.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/bender" args="l_arm_controller r_arm_controller head_controller joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node pkg="moveit_ros_move_group" type="move_group" name="bender" output="screen">
    <remap from="/joint_states" to="/bender/joint_states" />
  </node>

</launch>